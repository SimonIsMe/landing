<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Chat</title>

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/style/chat.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script type="text/javascript" src="/js/chat.js"></script>
    <script type="text/javascript">
        Chat.user = '{{ name }}';
    </script>
</head>
<body>
    <div id="top">
        <div class="container">
            Jesteś zalogowany jako <b>{{ name }}</b>
        </div>
    </div>
    <div id="content">
        <div id="messages-container">
            <div id="messages">

            </div>
        </div>
        <form>
            <input type="text" placeholder="Wpisz wiadomość" value="{{ message }}" />
            <button type="submit"><i class="fa fa-arrow-right"></i></button>
        </form>
    </div>
</body>
</html>